{
  "expo": {
    "name": "FaithHabits",
    "slug": "FaithHabits",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#5E72E4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.faithhabits.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for audio recording in prayer sessions.",
        "NSCameraUsageDescription": "This app uses the camera to add photos to prayer requests."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#5E72E4"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.faithhabits.app",
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-av",
      "expo-notifications",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#5E72E4",
          "sounds": ["./assets/notification-sound.wav"]
        }
      ]
    ]
  }
}
